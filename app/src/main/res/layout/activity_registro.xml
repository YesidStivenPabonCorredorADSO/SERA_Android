<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/configuracion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#49BAFF"
    tools:context=".registro">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#015FF4"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Registro"
            android:textColor="#FFFF"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="58dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            app:srcCompat="@drawable/imagen" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="364dp"
        android:layout_height="640dp"
        android:background="#DFF0FF"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.824">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Registro"
            android:textColor="#1F97FF"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Ingresa tu Nombre"
            android:textColor="#1F97FF" />

        <EditText
            android:id="@+id/editTextText3"
            android:layout_width="280dp"
            android:layout_height="33dp"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:background="#FFFF"
            android:ems="10"
            android:hint="Primer Nombre "
            android:inputType="text"
            android:paddingLeft="10dp"
            android:textColorHint="#005FA7" />

        <EditText
            android:id="@+id/editTextText4"
            android:layout_width="280dp"
            android:layout_height="33dp"
            android:layout_marginTop="10dp"
            android:background="#FFFF"
            android:ems="10"
            android:hint="Primer Apellido"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:textColorHint="#005FA7" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="INFORMACION BASICA"
            android:textColor="#1F97FF"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Completa tu fecha de nacimiento y genero"
            android:textColor="#1F97FF" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/hombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hombre"
                android:textColor="#005FA7" />

            <RadioButton
                android:id="@+id/mujer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mujer"
                android:textColor="#005FA7" />

            <RadioButton
                android:id="@+id/otro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Otro"
                android:textColor="#005FA7" />
        </RadioGroup>

        <EditText
            android:id="@+id/text_calendario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:backgroundTint="#211F1F"
            android:ems="10"
            android:gravity="center"
            android:hint="Fecha"
            android:inputType="text"
            android:textColorHint="#005FA7" />

        <Button
            android:id="@+id/button_fecha"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#1F97FF"
            android:gravity="center"
            android:hint="Abrir calendario"
            android:onClick="abrircalendario"
            android:textColorHint="#fff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_cancelar_registro"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:backgroundTint="#FFFF"
                android:text="Cancelar"
                android:textColor="#005FA7" />

            <Button
                android:id="@+id/button_sigue_registro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:backgroundTint="#1F97FF"
                android:text="Siguiente" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
